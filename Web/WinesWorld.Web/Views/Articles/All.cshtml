<script>
    $('#type').on('change', function () {
        $('.product').show();

        let category = $('#type').val();

        for (let elem of $('.product')) {
            let productCategory = $($(elem).children()[2]).text();

            if (!productCategory.toLowerCase().includes(category.toLowerCase())) {
                $(elem).hide();
            }
        }
    });


    
</script>
