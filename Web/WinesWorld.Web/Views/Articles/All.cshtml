        <h1 class="my-4">
            Articles Page
            <small>To make a logic if it is selected by a category</small>
        </h1>

        @foreach (var item in Model)
        {
            <!-- Project One -->
            <div class="row">
                <div class="col-md-7">
                    <a href="#">
                        <img class="img-fluid rounded mb-3 mb-md-0" src="@item.LinkMainPicture" alt="">
                    </a>
                </div>
                <div class="col-md-5">
                    <h3>@item.Title</h3>
                    <p>@item.BrefContent</p>
                    <a class="btn btn-primary" href="/Articles/Details/@item.Id">View Article</a>
                </div>
            </div>
            <!-- /.row -->

            <hr>
        }



