@model WinesWorld.Web.ViewModels.Wine.Details.WineDetailsViewModel

@{
    ViewData["Title"] = "Details - Wine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">
        @Model.Name
        <small>@Model.Type</small>
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-6">
            <img class="img-fluid" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Picture)" alt="">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Description</h3>
            <p>@Model.Description</p>
            <h3 class="my-3">Project Details</h3>
            <ul>
                <li>@Model.Country</li>
                <li>@Model.Year</li>
                <li>@Model.Price</li>
                <li>Order</li>
            </ul>
        </div>

    </div>
    <!-- /.row -->
    <!-- Related Projects Row -->
    <h3 class="my-4">Related Projects</h3>

    <ul class="text-left">
        <li>@Model.Likes</li>
    </ul>
    <div class="row">


        <button>Likes</button>
        <button>Favorite</button>
        <button class="btn btn-primary text-white font-weight-bold" data-toggle="modal" data-target="#orderModal">Order</button>
    </div>
    <!-- /.row -->

    <div class="row">
        <h3>Comments</h3>
    </div>

</div>
<!-- /.container -->

@* modal *@

<div class="modal fade" id="orderModal" tabindex="-1" role="dialog" aria-labelledby="orderModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orderModalLabel">Order - @Model.Name</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="order-form" action="/Wines/Order" method="post">
                    <div class="form-group">
                        <label for="quantity" class="col-form-label font-weight-bold">Quantity</label>
                        <input type="number"
                               class="form-control"
                               id="quantity"
                               name="quantity">
                        <input type="hidden" value="@Model.Id" name="wineId" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="complete-order-button">Complete</button>
            </div>
        </div>
    </div>
</div>


<script>
    $('#complete-order-button').click(function () {
        $('#order-form').submit();
    });
</script>